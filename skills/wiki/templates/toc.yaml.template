        autogen: true
        diagrams_needed: false
        diagram_types: []

    related_pages:
      - {repo}_03_getting-started

  # ============================================================
  # Page 6: Development Guide (Optional)
  # ============================================================
  - id: {repo}_06_development
    title: "Development Guide"
    filename: "06_development.md"
    description: "Guide for contributors and developers"

    source_files:
      - "CONTRIBUTING.md"
      - "Makefile"
      - "package.json"
      - "tests/**/*"

    sections:
      - id: {repo}_06_development_setup
        title: "Development Setup"
        description: "Setting up development environment"
        autogen: true
        diagrams_needed: false
        diagram_types: []

      - id: {repo}_06_development_testing
        title: "Testing"
